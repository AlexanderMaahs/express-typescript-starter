{
  "name": "hackathon-starter",
  "version": "4.3.0",
  "description": "A boilerplate for Node.js web applications",
  "repository": {
    "type": "git",
    "url": "https://github.com/sahat/hackathon-starter.git"
  },
  "author": "Sahat Yalkabov",
  "license": "MIT",
  "scripts": {
    "start": "npm run watch",
    "build": "npm run build-sass && gulp build-ts && node app/server.js",
    "watch": "concurrently -n -k \"npm run watch-sass\" \"gulp watch-ts\" \"nodemon app/server.js\"",
    "test": "mocha --reporter spec",
    "build-ts": "gulp build-ts",
    "watch-ts": "gulp watch-ts",
    "build-sass": "node-sass src/public/css/main.scss app/public/css/main.css",
    "watch-sass": "node-sass -w src/public/css/main.scss app/public/css/main.css"
  },
  "dependencies": {
    "async": "^2.1.2",
    "bcrypt-nodejs": "^0.0.3",
    "body-parser": "^1.15.2",
    "cheerio": "^0.22.0",
    "clockwork": "^0.1.4",
    "compression": "^1.6.2",
    "connect-mongo": "^1.3.2",
    "dotenv": "^2.0.0",
    "errorhandler": "^1.4.3",
    "express": "^4.14.0",
    "express-flash": "^0.0.2",
    "express-session": "^1.14.2",
    "express-status-monitor": "^0.1.5",
    "fbgraph": "^1.3.0",
    "github": "^7.2.0",
    "instagram-node": "^0.5.8",
    "lastfm": "^0.9.2",
    "lodash": "^4.16.6",
    "lusca": "^1.4.1",
    "mongoose": "^4.6.6",
    "morgan": "^1.7.0",
    "multer": "^1.2.0",
    "node-foursquare": "^0.3.0",
    "node-linkedin": "^0.5.4",
    "nodemailer": "^2.6.4",
    "passport": "0.3.2",
    "passport-facebook": "^2.1.1",
    "passport-github": "^1.1.0",
    "passport-google-oauth": "^1.0.0",
    "passport-instagram": "^1.0.0",
    "passport-linkedin-oauth2": "^1.4.1",
    "passport-local": "^1.0.0",
    "passport-oauth": "^1.0.0",
    "passport-openid": "^0.4.0",
    "passport-twitter": "^1.0.4",
    "paypal-rest-sdk": "^1.7.0",
    "pug": "^2.0.0-beta6",
    "request": "^2.78.0",
    "tumblr.js": "^1.1.1",
    "twilio": "^3.3.1-edge",
    "twit": "^2.2.5",
    "validator": "^6.1.0",
    "yarn": "^0.20.3"
  },
  "devDependencies": {
    "@types/async": "^2.0.40",
    "@types/body-parser": "^1.16.2",
    "@types/connect-mongo": "0.0.32",
    "@types/dotenv": "^2.0.20",
    "@types/errorhandler": "0.0.30",
    "@types/express": "^4.0.35",
    "@types/express-session": "0.0.32",
    "@types/jquery": "^2.0.41",
    "@types/lodash": "^4.14.60",
    "@types/mongoose": "^4.7.9",
    "@types/morgan": "^1.7.32",
    "@types/node": "^7.0.12",
    "@types/nodemailer": "^1.3.32",
    "@types/passport": "^0.3.3",
    "@types/passport-facebook": "^2.1.3",
    "@types/passport-local": "^1.0.29",
    "@types/request": "0.0.42",
    "@types/twilio": "0.0.8",
    "chai": "^3.5.0",
    "concurrently": "^3.4.0",
    "eslint": "^3.9.1",
    "eslint-config-airbnb-base": "^11.0.0",
    "eslint-plugin-import": "^2.1.0",
    "gulp": "^3.9.1",
    "gulp-typescript": "^3.1.6",
    "mocha": "^3.1.2",
    "sinon": "^1.17.6",
    "sinon-mongoose": "^1.3.0",
    "supertest": "^2.0.1",
    "typescript": "^2.2.2"
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "rules": {
      "comma-dangle": 0,
      "consistent-return": 0,
      "no-param-reassign": 0,
      "no-underscore-dangle": 0,
      "no-shadow": 0,
      "no-console": 0,
      "no-plusplus": 0
    }
  }
}
