{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": true,
        "allowJs": true,
        "moduleResolution": "node",
        "outDir": "app",
        "baseUrl": ".",
        "paths": {
          "*": ["src/types/*"]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "public"
    ]
}